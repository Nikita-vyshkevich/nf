{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}


	<!-- Initializing the slider -->
	<script type="text/javascript">
		$(document).ready(function() {
			$('#slider').layerSlider({
				createdWith: '6.6.048',
				sliderVersion: '6.11.1',
				type: 'fullsize',
				maxRatio: 1,
				pauseOnHover: 'disabled',
				skin: 'v5',
				navStartStop: false,
				showBarTimer: true,
				showCircleTimer: false,
				useSrcset: false,
				skinsPath: '../../layerslider/skins/',
				// height: 650,
        autoplay: false     
			});
		});

	</script>
  

<div id="slider" style="margin-left: auto; margin-right: auto; margin-bottom: 50px; margin-top: -135px; z-index: 0;">
  {%- for block in section.blocks -%}
  {% case block.type %}

  {%- when 'slide' -%}
    <div class="ls-slide" data-ls="bgsize:cover; bgposition:50% 50%; duration:8000; transition2d:1; timeshift:-500; deeplink:home; kenburnszoom:in; kenburnsrotate:0; kenburnsscale:1.1; parallaxevent:scroll; parallaxdurationmove:500;">
        <img
          srcset="{%- if block.settings.image_1.width >= 375 -%}{{ block.settings.image_1 | img_url: '375x' }} 375w,{%- endif -%}
          {%- if block.settings.image_1.width >= 750 -%}{{ block.settings.image_1 | img_url: '750x' }} 750w,{%- endif -%}
          {%- if block.settings.image_1.width >= 1100 -%}{{ block.settings.image_1 | img_url: '1100x' }} 1100w,{%- endif -%}
          {%- if block.settings.image_1.width >= 1500 -%}{{ block.settings.image_1 | img_url: '1500x' }} 1500w,{%- endif -%}
          {%- if block.settings.image_1.width >= 1780 -%}{{ block.settings.image_1 | img_url: '1780x' }} 1780w,{%- endif -%}
          {%- if block.settings.image_1.width >= 2000 -%}{{ block.settings.image_1 | img_url: '2000x' }} 2000w,{%- endif -%}
          {%- if block.settings.image_1.width >= 3000 -%}{{ block.settings.image_1 | img_url: '3000x' }} 3000w,{%- endif -%}
          {%- if block.settings.image_1.width >= 3840 -%}{{ block.settings.image_1 | img_url: '3840x' }} 3840w,{%- endif -%}
          {{ block.settings.image_1 | img_url: 'master' }} {{ block.settings.image_1.width }}w"
          sizes="{% if section.settings.stack_images_on_mobile %}(min-width: 750px) 100vw {% else %}100vw{% endif %}"
          src="{{ block.settings.image_1 | img_url: '1500x' }}"
          loading="lazy"
          alt="{{ block.settings.image.alt | escape }}"
          width="" 
          height="1000"
          class="ls-bg"
          allowfullscreen
          style="object-fit: cover"
        >
          <div style="width:100%; height:100%; background:rgba(11, 15, 41, 0.49); top:50%; left:50%;" class="ls-l" data-ls="easingin:easeOutQuint; durationout:800; parallaxlevel:0; position:fixed;">
          <h1 style="font-size: 84px; text-align:center; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); width:80%; color:#ffffff; top:340px; margin-left: 15px; margin-right: 15px; left:50%; white-space:normal;" class="h1 ls-l" data-ls="offsetyin:40; delayin:250; easingin:easeOutQuint; filterin:blur(10px); offsetyout:-200; durationout:800;">{{ block.settings.heading }}</h1>
          <p style="font-weight:600; text-align:center;text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);width:70%; color:#ffffff; top:550px; left:50%; white-space:normal; margin-left: 15px; margin-right: 15px;" class="ls-l" data-ls="offsetyin:40; delayin:260; easingin:easeOutQuint; filterin:blur(10px);  offsetyout:-200; durationout:1000;">{{ block.settings.text }}</p>
          <a href="{{ block.settings.button_link_1 }}"
          style="line-height: 3.55; width: 300px; text-align:center; top:680px; left:50%; white-space:normal;  margin-left: 15px; margin-right: 15px;" class="ls-l button button--secondary" data-ls="offsetyin:40; easingin:easeOutQuint; delayin:270; filterin:blur; offsetyout:-200; filterin:blur(10px); durationout:1100;">{{ block.settings.button_label_1 }}</a>

        </div>
    </div>

  {%- endcase -%}
  {%- endfor -%}

</div>


{% schema %}
{
  "name": "Slider",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Slide 1"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Slide title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Slider text"
        },
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Button label",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_label_1.label",
          "info": "t:sections.image-banner.blocks.buttons.settings.button_label_1.info"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "t:sections.image-banner.blocks.buttons.settings.button_link_1.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
